<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:id="@+id/ingredient_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/inge_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            tool:text="ingredient_name"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:textAlignment="textStart" />
        <TextView
            android:id="@+id/inge_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/inge_name"
            tool:text="ingredient_quantity"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/inge_measure"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/inge_name"
            android:layout_toRightOf="@+id/inge_quantity"
            tool:text="ingredient_measure"
            android:textStyle="normal|italic" />

    </RelativeLayout>

</android.support.v7.widget.CardView>